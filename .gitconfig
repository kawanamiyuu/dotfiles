[user]
# 環境変数で定義
#  GIT_AUTHOR_NAME
#  GIT_AUTHOR_EMAIL
#  GIT_COMMITTER_NAME
#  GIT_COMMITTER_EMAIL

[color]
  ui = auto

[alias]
  st = status
  co = checkout
  cm = commit
  tree = log --graph --date=short --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
  logg = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'

