[user]
# 環境変数で定義
#  GIT_AUTHOR_NAME
#  GIT_AUTHOR_EMAIL
#  GIT_COMMITTER_NAME
#  GIT_COMMITTER_EMAIL

[color]
  ui = auto

[pager]
  log  = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
  show = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
  diff = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less

[commit]
  verbose = true

[merge]
  ff = false

[alias]
  ba = branch -a
  st = status
  co = checkout
  cm = commit
  wip = !git stash && echo '----' && git commit --allow-empty -m '[ci skip] wip' && git push origin `git symbolic-ref --short HEAD` && echo '----' && git stash pop
  fh = fetch -p
  mg = merge
  tree = log --graph --date=short --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
  logg = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  clear = !git branch --merged | egrep -v '\\*|master|[0-9]+\\.x' | xargs git branch -d && echo '----' && git branch -a
  sync = !git fetch -p && echo '----' && git checkout ${1} && echo '----' && git rebase origin/${1}

[url "https://"]
  insteadOf = git://

[credential]
  helper = osxkeychain

